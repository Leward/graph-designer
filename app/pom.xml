    <artifactId>graph-editor-app</artifactId>

    <build>
        <plugins>
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.3</version>
                <configuration>
                    <mainClass>fr.leward.graphdesigner.MainApp</mainClass>
                    <release>${maven.compiler.release}</release>
                    <jlinkImageName>graph-editor</jlinkImageName>
                    <launcher>launcher</launcher>
